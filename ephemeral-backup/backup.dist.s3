#!/bin/bash
#
# Backup snapshot on S3 with AWS CLI
#

AWS_CLI=$(which aws)
AWS_PROFILE="default"
AWS_S3_BUCKET="s3://my_bucket"

get_snapshot_name() {
    snapshot_name=$1

    d=$(date +%Y%m%d)

    echo "${snapshot_name}${d}";
}

hook_backup() {
    mount_path=$1
    snapshot_name=$2

    $AWS_CLI --profile "$AWS_PROFILE" s3 sync "$mount_path/" "$AWS_S3_BUCKET/$snapshot_name/"

    return $?
}
