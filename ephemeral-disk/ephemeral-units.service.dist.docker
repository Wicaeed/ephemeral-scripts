[Unit]
Description=Run services using ephemeral disk
Requires=ephemeral-disk.service ephemeral-data.mount docker.socket docker.service
After=ephemeral-disk.service ephemeral-data.mount
Before=docker.socket docker.service
ConditionPathIsMountPoint=/ephemeral/data

[Install]
WantedBy=local-fs.target
RequiredBy=ephemeral-disk.service ephemeral-data.mount docker.socket docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/true
ExecStop=/bin/true
