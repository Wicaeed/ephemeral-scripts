[Unit]
Description=Run services using ephemeral disk
Requires=ephemeral-disk.service ephemeral-data.mount rabbitmq-server.service
After=ephemeral-disk.service ephemeral-data.mount
Before=rabbitmq-server.service
ConditionPathIsMountPoint=/ephemeral/data

[Install]
WantedBy=local-fs.target
RequiredBy=ephemeral-disk.service ephemeral-data.mount rabbitmq-server.service

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/true
ExecStop=/bin/true
