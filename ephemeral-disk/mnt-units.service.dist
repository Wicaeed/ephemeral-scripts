[Unit]
Description=Run services using ephemeral disk
After=mnt-disk.service mknt-resource.mount
Requires=mnt-disk.service mnt-resource.mount
# TODO: list the units using the ephemeral storage that should be started
# after mounting the storage
Before=
ConditionPathIsMountPoint=/mnt/resource

[Install]
WantedBy=local-fs.target
RequiredBy=mnt-disk.service mnt-resource.mount

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/bin/true
ExecStop=/bin/true
